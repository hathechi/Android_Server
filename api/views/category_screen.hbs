<div style="margin: 60px 10px;" class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div style="margin: 20px 0px;" class="row">
                <div class="col-sm-6">
                    <h2>Manage <b>Category</b></h2>
                </div>
                <div style="display: flex; justify-content: flex-end;" class="col-sm-6">
                    <a href="#addEmployeeModal" class="btn btn-success" data-bs-toggle="modal"><i
                            class="material-icons">&#xE147;</i> <span>Add New Employee</span></a>

                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            {{#each itemCategory}}
            <tbody>
                <tr>
                    <td style="color: #fff;">{{name_category}} </td>
                    <td>
                        <form action="/edit_category/{{_id}}" method="get">
                            <a style="margin: 5px;" href="/edit_category/{{_id}}">
                                <i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                        </form>
                        <form action="/delete_category/{{_id}}" method="post">
                            <button onclick="return confirm('Are you sure you want to delete?')" type="submit"
                                style="cursor: pointer; background-color: #292929 ; border: none; margin: 5px;">
                                {{!-- data-bs-target="#deleteEmployeeModal" data-bs-toggle="modal" --}}
                                <i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;
                                </i>
                            </button>
                        </form>
                    </td>
                </tr>
            </tbody>
            {{/each}}


        </table>

    </div>
</div>
<!-- Edit Modal HTML -->
<div id="addEmployeeModal" class="modal fade">
    <div style="color:#000" class="modal-dialog">
        <div class="modal-content">
            <form action="/add_category" method="post">
                <div class="modal-header">
                    <h4 class="modal-title">Add Category</h4>
                    <button style="background-color: red; border: none; border-radius: 4px;" type="button" class="close"
                        data-bs-dismiss="modal" aria-hidden="true"><i class="uil uil-times-square"></i></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Name</label>
                        <input name="name_category" minlength="3" type="text" class="form-control" required>
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-bs-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-success" value="Add">
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Edit Modal HTML -->
<div id="editEmployeeModal" class="modal fade">
    <div style="color:#000" class="modal-dialog">
        <div class="modal-content">
            <form action="/add_category" method="post">
                <div class="modal-header">
                    <h4 class="modal-title">Edit Category</h4>
                    <button style="background-color: red; border: none; border-radius: 4px;" type="button" class="close"
                        data-bs-dismiss="modal" aria-hidden="true"><i class="uil uil-times-square"></i></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Name</label>
                        <input name="name_category" minlength="3" type="text" class="form-control" required>
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-bs-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-success" value="Add">
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Delete Modal HTML -->
<div id="deleteEmployeeModal" class="modal fade">
    <div style="color:#000" class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 style="color:#000" class="modal-title">Delete Item</h4>
                    <button style="background-color: red; border: none; border-radius: 4px;" type="button" class="close"
                        data-bs-dismiss="modal" aria-hidden="true"><i class="uil uil-times-square"></i></button>
                </div>
                <div style="color:#000" class="modal-body">
                    <p>Are you sure you want to delete?</p>
                    {{!-- <p class="text-warning"><small>This action cannot be undone.</small></p> --}}
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-bs-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-danger" value="Delete">
                </div>
            </form>
        </div>
    </div>
</div>