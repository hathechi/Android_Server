<!-- ADD Modal HTML -->
<div id="addEmployeeModal" class="modal fade">
    <div style="color:#000" class="modal-dialog">
        <div class="modal-content">
            <form method="post" action="/add_product" enctype="multipart/form-data">
                <div class="modal-header">
                    <h4 class="modal-title">Add Product</h4>
                    <button style="background-color: red; border: none; border-radius: 4px;" type="button" class="close"
                        data-bs-dismiss="modal" aria-hidden="true"><i class="uil uil-times-square"></i></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Name</label>
                        <input minlength="6" name="name" type="text" class="form-control" required>
                    </div>
                    <!-- Dark -->
                    <select required name="select" class="form-select form-select-lg mt-3 mb-3"
                        aria-label=".form-select-lg example">
                        {{#each itemCategory}}
                        <option value="{{name_category}}">{{name_category}}</option>
                        {{/each}}
                    </select>


                    <div style="margin: 10px 0px;" class="form-group mt-3 mb-3">
                        <label>Image</label>
                        <input name="image" type="file" class="form-control" multiple required>

                    </div>

                    <div class="form-group mt-3 mb-3">
                        <label>Description</label>
                        <textarea minlength="3" name="description" class="form-control" required></textarea>
                    </div>
                    <div class="form-group mt-3 mb-3">
                        <label>Price</label>
                        <input minlength="2" name="price" type="number" class="form-control" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-bs-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-success" value="Add">
                </div>
            </form>
        </div>
    </div>
</div>