            var res = await fetch(`https://project-server-74eh.onrender.com/api/deleteUser/${id}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                },
            })
            if (res != null) {
                getDataRole();

            }
        } else {
            return;
        }
    }

    function checkUserLogin(id) {
        const roleUser = JSON.parse(localStorage.getItem('role'));
        if (roleUser['_id'] == id) {
            return true;
        } else {
            return false;
        }
    }
