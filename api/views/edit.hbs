<div style="background-color: #eaeaea; border-radius: 10px;padding: 50px; margin: 30px 0px;" class="container-fluid">

    <form style="color: black" method="post" action="/edit/{{itemProduct._id}}" enctype="multipart/form-data">
        <div class="modal-header">
            <h4 class="modal-title mb-4">Edit Employee</h4>
            <button style="background-color: red; border: none; border-radius: 4px;" type="button" class="close"
                data-bs-dismiss="modal" aria-hidden="true"><i class="uil uil-times-square"></i></button>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label>Name</label>
                <input value="{{itemProduct.name}}" minlength="6" name="name" type="text" class="form-control" required>
            </div>
            <!-- Dark -->
            <select name="category" class="form-select form-select-lg mt-3 mb-3" aria-label=".form-select-lg example">
                {{#each itemCategory}}
                <option value="{{name_category}}">{{name_category}}</option>
                {{/each}}
            </select>


            <div style="margin: 10px 0px;" class="form-group mt-3 mb-3">
                <label>Image</label>
                <input name="image" type="file" class="form-control" multiple>
            </div>

            <div class="form-group mt-3 mb-3">
                <label>Description</label>
                <input value="{{itemProduct.description}}" minlength="3" name="description" class="form-control"
                    required></input>
            </div>
            <div class="form-group mt-3 mb-3">
                <label>Price</label>
                <input value="{{itemProduct.price}}" minlength="2" name="price" type="number" class="form-control"
                    required>
            </div>
        </div>
        <div class="modal-footer">
            <input type="submit" class="btn btn-info" value="Save">
        </div>
    </form>

</div>